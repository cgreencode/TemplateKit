<box flexDirection="row">
  <text text="$properties.count" />
  <box flexDirection="row" flexGrow="1">
    <button title="all" titleColor="#000000" width="48" height="24" onTouchUpInside="handleSelectAll" />
    <button title="active" titleColor="#000000" width="48" height="24" onTouchUpInside="handleSelectActive" />
    <button title="completed" titleColor="#000000" width="48" height="24" onTouchUpInside="handleSelectCompleted" />
  </box>
  <button title="clear all" titleColor="#000000" width="48" height="24" onTouchUpInside="handleClearCompleted" />
</box>
